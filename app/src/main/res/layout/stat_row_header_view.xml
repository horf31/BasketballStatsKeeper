<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/stat_row_vertical_margin"
    android:layout_marginBottom="@dimen/stat_row_vertical_margin"
    >

  <TextView
      android:id="@+id/pts"
      android:layout_width="@dimen/stat_row_col_width"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:text="@string/pts"
      android:textSize="@dimen/stats_font_size"
      tools:text="PTS"
      />

  <TextView
      android:id="@+id/reb"
      android:layout_width="@dimen/stat_row_col_width"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:text="@string/reb"
      android:textSize="@dimen/stats_font_size"
      tools:text="REB"
      />

  <TextView
      android:id="@+id/ast"
      android:layout_width="@dimen/stat_row_col_width"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:text="@string/ast"
      android:textSize="@dimen/stats_font_size"
      tools:text="AST"
      />

  <TextView
      android:id="@+id/blk"
      android:layout_width="@dimen/stat_row_col_width"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:text="@string/blk"
      android:textSize="@dimen/stats_font_size"
      tools:text="BLK"
      />

  <TextView
      android:id="@+id/stl"
      android:layout_width="@dimen/stat_row_col_width"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:text="@string/stl"
      android:textSize="@dimen/stats_font_size"
      tools:text="STL"
      />

  <TextView
      android:id="@+id/to"
      android:layout_width="@dimen/stat_row_col_width"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:text="@string/to"
      android:textSize="@dimen/stats_font_size"
      tools:text="TO"
      />

  <TextView
      android:id="@+id/twoPT"
      android:layout_width="@dimen/stat_row_col_width_large"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:text="@string/two_pt"
      android:textSize="@dimen/stats_font_size"
      tools:text="2 PT"
      />

  <TextView
      android:id="@+id/threePT"
      android:layout_width="@dimen/stat_row_col_width_large"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:text="@string/three_pt"
      android:textSize="@dimen/stats_font_size"
      tools:text="3 PT"
      />

  <TextView
      android:id="@+id/onePT"
      android:layout_width="@dimen/stat_row_col_width_large"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:text="@string/ft"
      android:textSize="@dimen/stats_font_size"
      tools:text="FT"
      />

</LinearLayout>
