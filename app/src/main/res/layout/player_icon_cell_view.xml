<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_width="80dp"
    >

  <ImageView
      android:id="@+id/playerOutline"
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:src="@drawable/ic_round"
      android:tint="@color/black20"
      android:contentDescription="@string/player_outline"
      app:layout_constraintBottom_toTopOf="@id/playerOutline"
      app:layout_constraintDimensionRatio="1:1"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      />

  <TextView
      android:id="@+id/playerNumber"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="28sp"
      android:textColor="@color/black30"
      app:layout_constraintBottom_toBottomOf="@id/playerOutline"
      app:layout_constraintLeft_toLeftOf="@id/playerOutline"
      app:layout_constraintRight_toRightOf="@id/playerOutline"
      app:layout_constraintTop_toTopOf="@id/playerOutline"
      tools:text="10"
      />

  <TextView
      android:id="@+id/playerName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:ellipsize="end"
      android:maxLines="1"
      android:textSize="14sp"
      android:textColor="@color/black30"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toBottomOf="@id/playerOutline"
      tools:text="Jason W."
      />

</androidx.constraintlayout.widget.ConstraintLayout>